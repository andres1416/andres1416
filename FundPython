# Sección 1: Variables

# 1. Intercambio sin variable auxiliar
print("1. Intercambio sin variable auxiliar")
a = 5
b = 3
a, b = b, a
print("a:", a, "b:", b)

# 2. Suma de cuadrados
print("\n2. Suma de cuadrados")
a = 5
b = 3
c = a*2 + b*2
print("Resultado:", c)

# 3. Conversión de tipos
print("\n3. Conversión de tipos")
num = 10
str_num = str(num)
float_num = float(str_num)
int_num = int(float_num)
print("String:", str_num)
print("Float:", float_num)
print("Int:", int_num)

# 4. Redondeo y formato
print("\n4. Redondeo y formato")
numero = 17.8567
resultado = round(numero, 2)
mensaje = "Resultado: " + str(resultado)
print(mensaje)

# 5. Concatenación de variables
print("\n5. Concatenación de variables")
nombre = "Juan"
edad = 25
mensaje = "Hola, mi nombre es " + nombre + " y tengo " + str(edad) + " años."
print(mensaje)

# 6. Cálculo de edad actual
print("\n6. Cálculo de edad actual")
anio_actual = 2025
anio_nacimiento = 2006
edad = anio_actual - anio_nacimiento
print("Edad actual:", edad)

# 7. Cuenta regresiva con variables
print("\n7. Cuenta regresiva con variables")
n = 10
while n >= 0:
    print(n)
    n -= 1

# 8. Valor absoluto sin usar abs()
print("\n8. Valor absoluto sin usar abs()")
numero = -8
if numero < 0:
    valor_absoluto = -numero
else:
    valor_absoluto = numero
print("Valor absoluto:", valor_absoluto)

# 9. Incremento/decremento según paridad
print("\n9. Incremento/decremento según paridad")
n = 4
if n % 2 == 0:
    n += 1
else:
    n -= 1
print("Nuevo valor:", n)

# 10. Máximo entre tres números
print("\n10. Máximo entre tres números")
a = 10
b = 25
c = 20
mayor = a
if b > mayor:
    mayor = b
if c > mayor:
    mayor = c
print("El mayor es:", mayor)

# Sección 2: Operadores Relacionales

# 11. Verificación de rango
print("\n11. Verificación de rango")
x = 50
dentro_del_rango = 10 <= x <= 100
print(dentro_del_rango)

# 12. Comparación de strings (ignorar mayúsculas)
print("\n12. Comparación de strings")
a = "Hola"
b = "hola"
son_iguales = a.lower() == b.lower()
print(son_iguales)

# 13. Igualdad entre tres variables
print("\n13. Igualdad entre tres variables")
x = 7
y = 7
z = 7
todos_iguales = x == y == z
print(todos_iguales)

# 14. Presencia en lista
print("\n14. Presencia en lista")
lista = [1, 3, 5, 7, 9]
x = 5
presente = x in lista
print(presente)

# 15. Divisibilidad por 3 y 5
print("\n15. Divisibilidad por 3 y 5")
n = 15
es_divisible = n % 3 == 0 and n % 5 == 0
print(es_divisible)
